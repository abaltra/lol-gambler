doctype html
html
  head
    title The URFracle

    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

    link(href='css/style.css', rel='stylesheet', type='text/css', media='all')
    link(href='css/nav.css', rel='stylesheet', type='text/css', media='all')
    link(href='css/jquery.nouislider.min.css', rel='stylesheet', type='text/css', media='all')
    link(rel="shortcut icon" href="/favicon.ico" type="image/x-icon")
    link(rel="icon" href="/favicon.ico" type="image/x-icon")
    link(href='http://fonts.googleapis.com/css?family=Carrois+Gothic+SC', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='js/jquery.js')
    script(type='text/javascript', src='js/login.js')
    script(type='text/javascript', src='js/Chart.js')
    script(type='text/javascript', src='js/jquery.easing.js')  
    script(type='text/javascript', src='js/jquery.ulslide.js')
    script(type='text/javascript', src='js/jquery.nouislider.all.min.js')
    script(type='text/javascript', src='js/helpers.js')
    script(src='js/underscore-min.js')
  body
    .wrap
      .header
        #big-title 
            h1 The URFracle
        .header_top
            .menu
                a.toggleMenu(href='#')
                    img(src='images/nav.png', alt='')
                ul.nav
                    li
                        if !_.isUndefined( user )
                            a(href='/home')
                                i
                                    img(src='images/user.png', alt='')
                                | Home
                    li
                        if !_.isUndefined( user )
                            a(href='/bet')
                                i
                                    img(src='images/icon_balance.png', alt='')
                                | Place Bet 
                    li
                        if !_.isUndefined( user )
                            a(href='/leaderboards')
                                i
                                    img(src='images/icon_datareport.png', alt='')
                                | Leaderboards
                    .clear
            if !_.isUndefined( user )
                .profile_details
                    #loginContainer
                        a#loginButton
                            span #{user.username} 
                        #loginBox
                            form#loginForm
                                fieldset#body
                                    .user-info
                                        h4
                                            | Hello,
                                            a(href='#')  #{user.username}
                          
                                        ul
                                            li.profile.active
                                                a(href='/home') Home 
                            
                                            li.logout
                                                a(href='/signout')  Logout
                            
                                            .clear
                    .profile_img
                        a(href='#')
                            img(src='#{user.profileIconURL}', alt='')
                    .clear
            .clear

.main
    .wrap
        block content
