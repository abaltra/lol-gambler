extends layout

block content
    .column_middle
        .column_middle_grid1
            .column_right_grid.sign-in
                .sign_in
                    h3 Sign in to your account
                    form(action='/login', method='POST')
                        span
                            i
                                img(src='images/user.png', alt='')
                            input(type='text', name='username' , value='username', onfocus="this.value = '';", onblur="if (this.value == '') {this.value = 'Enter your username';}", required)
                        span
                            i
                                img(src='images/lock.png', alt='')     
                            input(type='password', name='password', placeholder='password', required)
                        h4
                            a(href='/signup', class='text-center new-account') Create an account
                        input.my-button(type='submit', value='Sign In')